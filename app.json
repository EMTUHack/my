{
    "name": "My Hackathon",
    "addons": [
        "heroku-redis",
        {
            "plan": "hobby-dev",
        }
    ],
    "env": {
        "DJANGO_SECRET": {
            "description": "Django's secret key",
            "generator": "secret"
        },
        "ALLOWED_HOSTS": {
            "description": "List of hosts to allow",
            "value": "['*']"
        },
        "DEBUG": {
            "description": "Whether the app is in debug mode",
            "value": "true"
        },
        "HACKATHON_NAME": {
            "description": "Name your event!",
            "value": "Hack the Campus"
        },
        "TEAM_MAX_SIZE": {
            "description": "Max team size",
            "value": "4"
        },
        "TOKEN_SIZE": {
            "description": "Max hacker token size. (Bigger == secure & impractical)",
            "value": "6"
        },
        "EVENT_RULES": {
            "description": "URL to the event rules",
            "value": "",
            "required": false
        },
        "HELPER": {
            "description": "URL of your helper app",
            "value": "https://helper.yourdomain.com",
            "required": false
        },
        "CHAT": {
            "description": "URL of your chat app",
            "value": "https://chat.yourdomain.com",
            "required": false
        },
        "ROOT_URL": {
            "description": "App's root url",
            "value": "http://localhost:8000"
        },
        "ADMIN_ACCOUNT": {
            "description": "Error logs are sent to this address",
            "value": "admin@example.com"
        },
        "EMAIL_ACCOUNT": {
            "description": "Account that sends email",
            "value": "bot@example.com"
        },
        "EMAIL_PASSWORD": "bot@example.com",
        "FACEBOOK_HANDLE": {
            "required": false
        },
        "FACEBOOK_KEY": {
            "description": "Facebook App ID",
            "value": "12345"
        },
        "FACEBOOK_SECRET": {
            "description": "Facebook App Secret",
            "value": "s3cret"
        },
        "GITHUB_KEY": {
            "description": "GitHub App ID",
            "value": "12345"
        },
        "GITHUB_SECRET": {
            "description": "GitHub App Secret",
            "value": "s3cret"
        },
        "MAILCHIMP_USER": {
            "description": "MailChimp user for mailchimp integration",
            "value": "",
            "required": false
        },
        "MAILCHIMP_SECRET": {
            "description": "MailChimp secret for mailchimp integration",
            "value": "",
            "required": false
        },
        "MAILCHIMP_LIST_PRE": {
            "description": "MailChimp list id of the pre_confirmation user list",
            "value": "",
            "required": false
        },
        "MAILCHIMP_LIST_CONFIRMED": {
            "description": "MailChimp list id of the post_confirmation user list",
            "value": "",
            "required": false
        },
        "USE_MAILCHIMP": {
            "description": "Whether or not to use mailchimp",
            "value": "False"
        }
    },
    "keywords": ["python", "hackathon", "django"]
}
